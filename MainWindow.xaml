<Window x:Class="MrRobo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoBoPAL" Height="350" Width="525" Topmost="True" WindowState="Maximized" WindowStartupLocation="CenterScreen">

    <Grid Name="MainGrid">
        <StackPanel Grid.ColumnSpan="3" Name="stackPanel1" Orientation="Horizontal" Height="23" VerticalAlignment="Top">
            <Button Content="Save" Height="23" Name="SaveButton" Width="75" Click="btnSave_Click" />
            <Button Content="Run" Height="23" Name="RunButton" Width="75" Click="btnRun_Click" />
        </StackPanel>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="105*" />
            <ColumnDefinition Width="320*" />
            <ColumnDefinition Width="78*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="285*" />
            <RowDefinition Height="11*" />
        </Grid.RowDefinitions>
        

    </Grid>
</Window>
